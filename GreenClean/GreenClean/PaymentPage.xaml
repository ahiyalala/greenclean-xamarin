<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenClean.PaymentPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Clicked="AddNewPayment"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView x:Name="PaymentList"
                    ItemSelected="OnItemSelect">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell IsEnabled="{Binding IsEnabled}">
                        <Label Text="{Binding Payment.PaymentDetail}" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" FontSize="Medium"  />
                        <Label Text="{Binding Payment.Status}" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center" FontSize="Small" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>